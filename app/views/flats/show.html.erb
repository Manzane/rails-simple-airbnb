
<h1><%= @flat.name %></h1>

<div class="container">
  <div class="flat">
    <img src="<%= @flat.img_url %>">
    <p><%= @flat.description %></p>
    <p>Location: <%= @flat.address %> </p>
    <p>Number of Guests: <%= @flat.number_of_guests %> </p>
    <p>Price per night: <%= @flat.price_per_night %>â‚¬</p>

  </div>
  <div class="links">
  <p><%= link_to edit_flat_path(@flat) do %>
  <i class="far fa-edit">Edit</i>
  <% end %>
  </p>
  <p><%= link_to flat_path(@flat), method: :delete,
                data: { confirm: "Are you sure?" } do %>
                <i class='far fa-trash-alt'>Delete</i>
                <% end %></p>
  <p><%= link_to flats_path do %>
  <i class="fas fa-backward">Back</i>
  <% end %>
  </p>
</div>

